{% extends "template.html.twig" %}
{% block header %}
	{% include 'header.html.twig' %}
{% endblock %}

{% block content %}
	<h1>Formulaire</h1>


	<form action="{{ action }}addNewRecipe" method="POST" id="form">
		<div class="step active" id="step-1">
			<label for="title">Titre:</label>
			<input type="text" name="title" >

			<label for="duration">Duration:</label>
			<input type="number" name="duration" required>

			<label for="description">Description</label>
			<input type="text" name="description" required>

			<label for="photo">Photo</label>
			<input type="text" name="photo" >

			<label for="difficulty">Difficulté</label>
			<select name="difficulty" >
				<option class="select-text-blanc" value="">Choisissez...</option>
				<option class="option" value="facile">facile</option>
				<option class="option" value="moyen">moyen</option>
				<option class="option" value="difficile">difficile</option>
			</select>
			<button id="test">Suivant</button>
		</div>
		<div class="step" id="step-2">
			<h1>Étape 2</h1>
			<label for="quantity">Quantité</label>
			<input type="number" name="quantity" placeholder="Quantité" >
			<label for="unity">Unité</label>
			<input type="text" name="unity" placeholder="Unité" >
			<label for="ingredient">Ingredient</label>
			<input type="text" name="ingredient" placeholder="Ingredient">
			
			<button id="buttonIngredient">test
			</button>
			<br>
			<button>Précédent</button>
			<input type="submit" name="submit" value="Valider">
		</div>
	</form>
{% endblock %}

{% block js %}<script src="{{style}}js/ingredient.js"></script>
{% endblock %}

